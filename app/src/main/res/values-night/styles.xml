<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_bnt_style" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_btn_icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/menu_btn_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="menu_background">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="title_color">
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="back_arrow_color">
        <item name="android:tint">@color/yp_white</item>
    </style>

    <style name="background_color">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="settings_tv_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
    </style>

    <style name="settings_icon_color">
        <item name="android:tint">@color/yp_white</item>
        <item name="android:layout_marginEnd">@dimen/settings_list_tv_margin_end</item>
    </style>

    <style name="settings_switch_color">
        <item name="android:trackTint">@color/yp_blue</item>
        <item name="android:thumbTint">@color/yp_blue</item>
    </style>

    <style name="search_field_style">
        <item name="android:backgroundTint">@color/yp_white</item>
    </style>

    <style name="search_field_icon_style">
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="search_edit_text_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="settings_background">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="settings_title_color">
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="settings_back_arrow_color">
        <item name="android:tint">@color/yp_white</item>
    </style>

</resources>